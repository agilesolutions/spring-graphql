scalar DateTime
scalar PositiveFloat

type Query {
    clients: [Client]
}

type Client {
    id: ID!
    firstName: String!
    middleName: String
    lastName: String!
    accounts: [Account]!
}

type Account {
    id: ID!
    clientId: Int!
    number: String!
    description: String!
    lineOfBusiness: String!
    amount: Int!
    openingDayBalance: PositiveFloat!
    maturityDate: DateTime!
}